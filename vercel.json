{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "build": {
    "env": {
      "PYTHON_VERSION": "3.9",
      "NLTK_DATA": "/tmp/nltk_data"
    },
    "commands": [
      "python -m nltk.downloader punkt -d /tmp/nltk_data"
    ]
  }
}
